{
  "functions": {
    "pages/api/**/*.ts": {
      "runtime": "@vercel/node",
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/fonts/(.*\\.woff2?)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "font/woff2"
        }
      ]
    },
    {
      "source": "/fonts/(.*\\.ttf)",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "font/ttf"
        }
      ]
    },
    {
      "source": "/fonts/(.*\\.otf)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "font/otf"
        }
      ]
    }
  ],
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install"
}
